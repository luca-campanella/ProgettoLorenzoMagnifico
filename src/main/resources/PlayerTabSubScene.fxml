<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<fx:root type="Pane" xmlns:fx="http://javafx.com/fxml">
    <children>
        <SplitPane dividerPositions="0.847870182555781" orientation="VERTICAL"  prefHeight="200.0">
            <items>
                <HBox>
                    <children>
                        <ImageView fx:id="thisPlayerPersonalTile" fitHeight="366.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true" />
                        <AnchorPane fx:id="personalBoard" prefHeight="200.0" prefWidth="573.0" styleClass="personalBoardPane" />
                    </children>
                </HBox>
                <ToolBar fx:id="buttonsToolBar" prefHeight="45.0" prefWidth="488.0">
                    <items>
                        <Button fx:id="blueCardsButton" mnemonicParsing="false" onAction="#showBlueCards" prefHeight="27.0" prefWidth="166.0" text="Blue character cards" />
                        <Button fx:id="purpleCardsButton" mnemonicParsing="false" onAction="#showPurpleCards" text="Purple Venture Cards" />
                        <!-- <Button fx:id="leaderCardsButton" mnemonicParsing="false" onAction="#showOtherPlayerLeader" text="Leader Cards" /> -->
                        <Button fx:id="passTurnButton" mnemonicParsing="false" text="Pass the turn" onAction="#passTurn"/>
                    </items>
                </ToolBar>
            </items>
        </SplitPane>
    </children>
</fx:root>
